{
    "manifest_version": 3,
    "name": "EcoWellness - Sustainable Browsing & Digital Wellness",
    "version": "2.0.0",
    "description": "Advanced sustainable browsing with AI-powered wellness coaching and real-time carbon footprint tracking",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "webRequest",
        "notifications",
        "idle",
        "alarms"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background/service-worker.js",
        "type": "module"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content/content-script.js"],
        "run_at": "document_idle"
    }],
    "action": {
        "default_popup": "popup/index.html",
        "default_title": "EcoWellness Dashboard",
        "default_icon": {
            "16": "assets/icon/cursor.png",
            "48": "assets/icon/cursor.png",
            "128": "assets/icon/cursor.png"
        }
    },  
    "icons": {
        "16": "assets/icon/cursor.png",
        "48": "assets/icon/cursor.png",
        "128": "assets/icon/cursor.png"
    },
    "web_accessible_resources": [{
        "resources": ["assets/*", "data/*"],
        "matches": ["<all_urls>"]
    }]
}
